{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "@types/jest", "node", "@testing-library/jest-dom"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "stories"],
  "exclude": ["node_modules", "dist"]
}
